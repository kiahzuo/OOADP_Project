<div class="sec-title p-b-60">
  <h2>
      <span>Wishlist</span>
  </h2>
</div>
<br>

<div class="container">

<div class="row">


<% for (i =0; i < wishlist.length; i++) {%>
  <% if ( wishlist[i].user_id == user.id) { %>
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card-deck" >
        <div class="card card-shadow text-center">
          <div class="card-body" data-id="<%= wishlist[i].id %>">
              <a href="/viewbook/<%= wishlist[i].bookid%>"><img class="card-img-top" src="http://localhost:3000/images/<%= wishlist[i].imageName %>" alt=""></a>
            <h4 class="card-title"><%= wishlist[i].title %></h4>
            <h6 class="card-text">Price : $<%= wishlist[i].price %></h6>
            <div class="dropdown-divider"></div>
            <a href="/viewbook/<%= wishlist[i].bookid%>"><button type="button" class="btn btn-outline-primary">Info</button></a>
            <input type="submit" class="deleteBtn"  value="Remove">
          
          </div>
        </div>
        </div>
      </div>

      <% } %>
<% } %>
</div>

<style>
  btn{
    width:300px;
  }
</style>

<script>

         $('.deleteBtn').click(function () {
                var booknumber = $(this).closest("div").data('id');
                $.ajax({
                  url: 'http://localhost:3000/wishlist/' + booknumber,
                  type: 'DELETE',
                  success: function (result) {
                    console.log(result.message);
                    var itemToRemove = '.card-body[data-id=' + booknumber + ']';
                    $(itemToRemove).remove();
                    alert("Wishlist Removed.");
                  },
                  error: function (result) {
                    alert("Unable to delete record.");
                    console.log(result.message);
                  }
                });
              });


</script>




