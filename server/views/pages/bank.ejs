        <!-- login Modal -->
        <div class="modal fade" id="login_modal" role="dialog">
          <div class="modal-dialog">
            <!-- login Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                  <h4 id="gai" class="modal-title">Add User</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <form action="/bank" method="POST">
                <div class="modal-body">
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="InputFirstName"> First Name</label>
                      <input id="InputFirstName" name="InputFirstName" class="form-control" type="text" placeholder="First Name" pattern="^([A-Za-z ])\w+$" title="No special characters or numbers" required>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="InputLastName">LastName</label>
                      <input id="InputLastName" name="InputLastName" class="form-control" type="text" placeholder="Last Name" pattern="^([A-Za-z ])\w+$" title="No special characters or numbers" required>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col">
                      <label for="AccountNumber"> Account Number</label>
                      <input id="AccountNumber" name="AccountNumber" class="form-control" type="text" placeholder="Account Number" pattern="^\d+$" title="Numbers Only" required>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col">
                      <label for="AvailableBalance">available Balance</label>
                      <input id="AvailableBalance" name="AvailableBalance" class="form-control" type="text" placeholder="available Balance" pattern="^\d+$" title="Numbers Only" required>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col">
                      <label for="CreditcardNumber">Creditcard Number</label>
                      <input id="CreditcardNumber" name="CreditcardNumber" class="form-control" type="text" placeholder="Creditcard Number" pattern="^3[47][0-9]{13}$|^5[1-5][0-9]{14}$|^4[0-9]{12}(?:[0-9]{3})?$|^65[4-9][0-9]{13}|64[4-9][0-9]{13}|6011[0-9]{12}|(622(?:12[6-9]|1[3-9][0-9]|[2-8][0-9][0-9]|9[01][0-9]|92[0-5])[0-9]{10})$" title="Invalid CreditCard Number, Make sure there are no spaces inbetween numbers" required>
                    </div>
                  </div>
                  <div class="form-row">
                      <div class="form-group col">
                        <label for="CreditcardNumber">Credit / Debit</label>
                        <select id="CreditDebit" name="CreditDebit" class="form-control" required>
                          <option>Credit</option>
                          <option>Debit</option>
                        </select>
                      </div>
                    </div>
                  <div class="form-row">
                    <div class="form-group col">
                      <label for="ExpireMonth">Month</label>
                      <input id="ExpireMonth" name="ExpireMonth" class="form-control" type="number" pattern="^[1-9]$|^[1][0-2]$" title="Number Range from 1-12" required>
                    </div>
                    <div class="form-group col">
                        <label for="ExpireYear">Year</label>
                        <input id="ExpireYear" name="ExpireYear" class="form-control" type="number" pattern="^[2][0][0-9][0-9]$" title="Invalid year" required>
                      </div>
                  </div>
                  <label for="CreditCardSC">Security Code</label>
                  <input id="CreditCardSC" name="CreditCardSC" class="form-control" type="text" placeholder="Security Code"  pattern="^[0-9]{4}|[0-9]{3}$" title="3 or 4 digit" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" placeholder="Submit">
                </div>
              </form>
            </div>
          </div>
