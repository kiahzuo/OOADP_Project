                                <p class="card-text col-md-6" id="to<%= key; %>">To:&nbsp;<%= confirm[key].To; %></p>
                              </div> 
                              <div class="row">
                                <p class="card-text col-md-4" id="amount<%= key; %>">Amount:&nbsp;$<%= confirm[key].Amount; %></p>
