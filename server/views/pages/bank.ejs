                                <button type="button" class="form-control spacing col btn-primary" id="button<%= key; %>"onclick="confirm(this.id)">Confirm</button>
                              </div> 
                            </div>
                          </div>
                          <br>
                        <% } %>
                      <% } %>
                      <% if(confirm == null) { %>
                        <h1>There the no transcation</h1>
                      <% } %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            
